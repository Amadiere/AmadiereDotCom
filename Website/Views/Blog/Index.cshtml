@model Amadiere.Website.ViewModels.Blog.IndexViewModel
@{
    ViewData["Title"] = "Article";
    Layout = "~/Views/Shared/_BaseLayout.cshtml";
    ViewBag.BodyClasses = "blog";
}

<div class="logo-box">
    <a href="~/"><img src="/images/logo.png" alt="Amadiere.com" class="logo" /></a>
</div>
<header>
    <h2>Amadiere's Blog</h2>
    <div>Content produced by me, Alex Holt. My opinions are my own.</div>
</header>
<ul id="content-list">
    @foreach (var article in Model.Articles)
    {
        <li class="article">@Html.Partial("_ArticleListItem", article)</li>
    }
</ul>
<footer>
    Thanks for reading this blog!
</footer>

@section BottomOfHead
{
    <link rel="stylesheet" href="/css/highlight/github.css" />
    <script type="text/javascript" src="/js/highlight.min.js"></script>
    <script type="text/javascript">
        hljs.initHighlightingOnLoad();
    </script>
}
